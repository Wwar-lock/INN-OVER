<p id="notice"><%= notice %></p>

<h2 align="center">
  <strong>Title ::</strong>
  <%= @article.title %>
</h2>
<div class="well col-xs-8 col-xs-offset-2 description">
  <h4 align="center" class=" heading-description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@article.description) %>
  <div class="action-articles">
    <%= link_to 'Edit', edit_article_path(@article),class: "btn btn-md btn-primary" %>
    <%= link_to "Delete this article",article_path(@article), method: :delete, 
                                                                              data: { confirm: "Are you sure to PERMANENTLY DELETE this Article??"}, 
                                                                              class: "btn btn-md btn-danger" %>
    <%= link_to 'View all articles', articles_path,class: "btn btn-md btn-success" %>
</div>